.row
  .col-xs-6
    h3 Profile Form
    form(name='profileInfoForm', novalidate)
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', ng-model='profile.name')
      .form-group
        label(for='age') Age
        input.form-control#age(type='number', ng-model='profile.age')
      .form-group
        label(for='gender') Gender
        select.form-control#gender(ng-model='profile.gender')
          option Male
          option Female
      .form-group
        label(for='address') Address
        textarea.form-control#address(type='text', ng-model='profile.address')
      .form-group
        label(for='image') Profile Pic Url
        input.form-control#image(type='url', ng-model='profile.photo')
      button.btn.btn-info(type='submit', ng-click='save(profile)') Save profile
  .col-xs-4
    h3 Profile Info
    h4 Name: {{profile.name}}
    h4 Balance: {{balance | currency}}
    img.img-thumbnail.img-responsive(ng-src='{{profile.photo}}')
    h4 Age: {{profile.age}}
    h4 Gender: {{profile.gender}}
    h4 Address: {{profile.address}}
.row
  .col-xs-3
    h4 Deposit Form
    form(name='depositForm', novalidate)
      .form-group
        label(for='amount') Amount
        input.form-control#amount(ng-init='amount=0', type='number', name='amount', ng-model='amount')
      .form-group
        button.btn.btn-success(type='submit', ng-click='deposit(amount)') Deposit
  .col-xs-4
